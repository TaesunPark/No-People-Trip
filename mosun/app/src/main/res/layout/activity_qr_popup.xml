    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/colorBaseLight">

        <TextView
            android:id="@+id/limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:lineSpacingExtra="5dp"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/payment_rounded"
            android:orientation="vertical"
            android:elevation="10dp"
            android:padding="5dp"
            android:translationZ="10dp"
            android:visibility="invisible">

            <FrameLayout
                android:id="@+id/qr_chekin"
                android:layout_marginTop="30dp"
                android:layout_gravity="top|center"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/payment_button_border">


                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/qr_code"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="14dp" />

                <TextView
                    style="@style/SubTitleTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="QR 체크인"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="65dp"
                    android:text="qr체크인을 위한 qr코드입니다"
                    android:textColor="@color/no"
                    android:textSize="13dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/qr_scanner"
                android:layout_width="200dp"
                android:layout_gravity="bottom|center"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:background="@drawable/payment_button_border"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/qr_code"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="14dp" />

                <TextView
                    style="@style/SubTitleTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="QR 스캐너"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="55dp"
                    android:lineSpacingExtra="5dp"
                    android:text="관광지의 qr코드를 스캔하여 스탬프를 얻을 수 있습니다"
                    android:textColor="@color/no"
                    android:textSize="13dp" />

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorTransparent">

        <ImageView
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close_24dp"
            android:padding="10dp"
            android:background="@drawable/round_background_black" />

    </FrameLayout>

</LinearLayout>